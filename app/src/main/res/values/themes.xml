<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MySleepzyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core palette -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/charcoal_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/moon_accent</item>
        <item name="colorSecondaryVariant">@color/moon_accent_dark</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/charcoal_dark</item>
        <item name="android:navigationBarColor">@color/charcoal</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
