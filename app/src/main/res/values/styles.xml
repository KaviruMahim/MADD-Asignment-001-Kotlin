<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Old helper to remove active pill -->
    <style name="NoActiveRipple">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- App Typography (new tokens) -->
    <style name="App.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.Text.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card / Section -->
    <style name="App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Buttons -->
    <style name="App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#111217</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_primary_bg</item>
        <item name="rippleColor">@color/accentYellowPressed</item>
    </style>

    <style name="App.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_outline_bg</item>
        <item name="rippleColor">@color/accentYellow</item>
    </style>

    <!-- Chip / ListItem (basic placeholders to match look) -->
    <style name="App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="chipBackgroundColor">@color/surfaceVariant</item>
        <item name="rippleColor">@color/accentYellow</item>
    </style>

    <style name="App.ListItem" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <!-- Bottom navigation style using new tokens -->
    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_colors</item>
        <item name="itemTextColor">@color/nav_item_colors</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/bg</item>
    </style>

</resources>
