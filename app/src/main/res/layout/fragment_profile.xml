<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="42dp"
        android:paddingBottom="24dp">


        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_bg_soft"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />

            <ImageView
                android:id="@+id/editAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:background="@color/accentYellow"
                android:contentDescription="Edit avatar"
                android:src="@drawable/ic_edit" />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="20dp"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/accountInfoRow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Account Informations"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#26FFFFFF" />

                <TextView
                    android:id="@+id/trophiesRow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:text="My Trophies"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#26FFFFFF" />

                <TextView
                    android:id="@+id/textSizeRow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Text Size"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Support"
            android:textColor="#B3FFFFFF" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="20dp"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/termsRow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Terms Of Service"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#26FFFFFF" />

                <TextView
                    android:id="@+id/privacyRow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Privacy Policy"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@color/accentYellow"
            android:text="Sign out"
            android:textAllCaps="false"
            android:textColor="#111217"
            app:backgroundTint="@color/warn" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
